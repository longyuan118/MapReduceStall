/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -2cm;
}

.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}


/* pages/mine/mine.wxss */
.account-bg {
  width: 100%;
  height: 150rpx;
}
/* 订单 */
.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}
.myorder-text {
  font-size: 30rpx;
  color: gray;
  margin: 20rpx;
  width: 40%;
}
.myorderlook-text {
  font-size: 30rpx;
  color: gray;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}
.next-image {
  width: 20rpx;
  height: 25rpx;
  position: relative;
  right: 10rpx;
}

.navs {
  display: flex;
}
.nav-item {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx;
}
.nav-item text {
  margin-top: 20rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  font-size: 25rpx;
  color: gray;
}
/* 列表 */
.person-list {
  
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-top: 20px;
  /* margin-left: -500rpx; */
}
.list-item {
  /* background-color: rgb(230, 230, 230); */
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  margin-top: 10px;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
}
.person-line {
  width: 600rpx;
  height: 2rpx;
  background: lightgray;
  margin-left: 90rpx;
}